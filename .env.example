# Core DB + LLM
DATABASE_URL="postgresql://user:password@host:5432/dbname"
DIRECT_URL="postgresql://user:password@host:5432/dbname"
FASTROUTER_API_KEY="your_fastrouter_api_key"
FASTROUTER_BASE_URL="https://go.fastrouter.ai/api/v1"
FASTROUTER_MODEL="anthropic/claude-sonnet-4.6"

# Auth (required unless DEV_AUTH_BYPASS=true)
JWT_JWKS_URL="https://your-auth-domain/.well-known/jwks.json"
JWT_ISSUER="https://your-auth-domain/"
JWT_AUDIENCE="your-api-audience"
JWT_ORG_CLAIM="organizationId"
DEV_AUTH_BYPASS="true"

# Stateful clarify (required for stateful mode)
REDIS_URL="redis://localhost:6379"
ENABLE_STATEFUL_CLARIFY="true"
SESSION_TTL_SEC="900"

# Runtime
PORT="3000"
QUERY_TIMEOUT_MS="5000"
SCHEMA_REFRESH_SEC="900"
SQL_HARD_ROW_CAP="100"
LLM_TIMEOUT_MS="20000"
LLM_MAX_RETRIES="2"
LLM_RETRY_BASE_MS="250"
PG_POOL_MAX="20"
PG_POOL_IDLE_TIMEOUT_MS="30000"
PG_POOL_CONNECTION_TIMEOUT_MS="5000"
PG_POOL_MAX_USES="5000"
ENABLE_PRISMA_ADAPTER="false"
DB_EXECUTOR="pg"
LOG_LEVEL="info"
